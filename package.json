{
  "name": "questron",
  "version": "1.0.0",
  "private": true,
  "description": "Real-time multiplayer quiz platform â€” questron.app",
  "scripts": {
    "dev": "concurrently \"npm run dev:worker\" \"npm run dev:frontend\" --names worker,frontend --prefix-colors cyan,green",
    "dev:frontend": "npx --yes serve public -p 3000 --no-clipboard",
    "dev:worker": "cd worker && npx wrangler dev --local --port 8787",
    "start": "npm run dev",
    "build:worker": "cd worker && npm install",
    "deploy:worker": "cd worker && npx wrangler deploy",
    "type-check": "cd worker && npx tsc --noEmit",
    "pack:quiz": "node scripts/pack-quiz.js"
  },
